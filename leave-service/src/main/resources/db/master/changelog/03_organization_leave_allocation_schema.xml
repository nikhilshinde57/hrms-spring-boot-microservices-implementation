<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="08" author="nikhil.shinde">
    <createTable tableName="organization_leave_allocation"
      remarks="Table containing details of organization_leave_allocation">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints nullable="false" unique="true" primaryKey="true"/>
      </column>
      <column name="guid" type="uuid" defaultValue="uuid_generate_v4()">
        <constraints nullable="false" unique="true" />
      </column>
      <column name="organization_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="count" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="datetime">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="datetime">
        <constraints nullable="false"/>
      </column>
      <column name="created_by" type="varchar(200)">
        <constraints nullable="false" />
      </column>
      <column name="updated_by" type="varchar(200)">
        <constraints nullable="false" />
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>